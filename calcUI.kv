<CalcLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 50
            size_hint: (1,None)
            multiline:False
            #max_length:20
            #width:200
        GridLayout:
            cols:4
            rows:5

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "%"
                on_press:root.percentage()

            Button:
                id:clear
                size_hint:(0.2,0.2)
                font_size: 30
                #text: u"\u00AB"
                text: "Del"
                on_press:root.delete()

            Button:
                id:clear
                size_hint:(0.2,0.2)
                font_size: 30
                text: "C"
                on_press: root.clear()

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "/"   
                on_press:root.math_sign("/")

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "7"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(7)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "8"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(8)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "9"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(9)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "*"  
                on_press:root.math_sign("*")

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "4"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(4)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "5"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(5)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "6"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(6)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "-" 
                on_press: root.math_sign("-")    

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "1"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(1)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "2"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(2)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "3"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(3)

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "+"     
                on_press:root.math_sign("+")

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "+/-"
                on_press:root.pos_neg()

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "0"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(0)

            Button:
                #id:dot
                size_hint:(0.2,0.2)
                font_size: 30
                text: "."
                background_color: (157/255,157/255,157/255,1)
                on_press:root.dot()

            Button:
                size_hint:(0.2,0.2)
                font_size: 30
                text: "="  
                on_press:root.equals()    
      